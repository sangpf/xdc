<!DOCTYPE html>
<html manifest="newIns.manifest">

<head>
    <meta charset="utf-8">
    <title>心发现</title>
    <META HTTP-EQUIV="Pragma" CONTENT="no-cache">
    <META HTTP-EQUIV="Cache-Control" CONTENT="no-cache">
    <META HTTP-EQUIV="Expires" CONTENT="0">
    <meta name="format-detection" content="telephone=no">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link rel="stylesheet" href="css/mui/mui.css">
    <link rel="stylesheet" href="css/lib/font-awesome.min.css">
    <link rel="stylesheet" href="css/xdc/xdc_main.css">
</head>

<body>
    <!-- 头部 -->
    <header class="mui-bar mui-bar-nav">
        <i class="mui-icon mui-icon-left-nav mui-pull-left report-comment-back-btn" id="report-comment-back-btn"></i>
        <i class="icon-edit mui-pull-right report-comment-write-btn" id="report-comment-write-btn"></i>
        <h1 class="mui-title" style="color:#fff">评论</h1>
    </header>
    <!-- 评论列表 -->
    <div style="margin-top: 40px">
        <div id="goodcommentArea"></div>
        <div id="commentArea"></div>
    </div>
    <!-- loading动画 -->
	<div id="over" class="over">
	  	<iframe frameborder="0" scrolling="no" src="fireloading.html" width="100%" height="100%"></iframe>
	</div>
	<div id="layout" class="layout">
	  	<div class="loading">  
	  	</div>
	  	<p class="loading-text">Loading...</p>
	</div>
    <!-- JS -->
    <script src="js/mui/mui.min.js"></script>
    <script src="js/lib/mustache.min.js"></script>
    <script src="js/config.js"></script>
    <script src="js/xdc/usefulFun.js"></script>
    <script type="text/javascript" src="http://pingjs.qq.com/h5/stats.js" name="MTAH5" sid="500158849" cid="500158852"></script>
    <script>
    loadCommentList();
    document.getElementById('report-comment-back-btn').addEventListener('tap', function() {
        jumpTo('report_result');
    });
    document.getElementById('report-comment-write-btn').addEventListener('tap', function() {
        jumpTo('comment');
    });
    if (window.applicationCache.status == window.applicationCache.UPDATEREADY) {
        window.applicationCache.update();
    }
    </script>
</body>

</html>
